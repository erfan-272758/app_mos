<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="5dp"
    android:background="@color/colorWhite"
    tools:context=".activity.ConversationActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:id="@+id/appbar"
        >
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/person"
                    android:layout_margin ="5dp"
                    android:id="@+id/image1"
                    android:layout_alignParentLeft="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="4dp"
                    android:layout_toRightOf="@id/image1"
                    android:textSize="10sp"
                    android:text="محمد حسین فاتحی"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:id="@+id/text2"
                    />

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/line"
        android:background="@color/colorWhiteGray"
        android:layout_below="@id/appbar"
        android:layout_marginBottom="5dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutAnimation="@anim/recycler_anim"
        app:layout_constraintTop_toBottomOf="@id/line"
        android:id="@+id/re_view"
        android:layout_above="@id/linear"
        android:layout_below="@id/line"
        android:background="@drawable/blue_background_1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layoutDirection="ltr"
        android:id="@+id/linear"
        android:layout_marginLeft="5dp">
        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:inputType="textMultiLine"
                android:maxLines="5"
                android:textSize="16sp"
                android:hint="چیزی تایپ کنید"
                android:background="@drawable/roundempty"
                android:id="@+id/text_input"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:textAlignment="viewEnd"
                />
        <com.google.android.material.button.MaterialButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/btn_send"
            app:icon="@drawable/send"
            app:iconSize="22dp"
            android:layout_marginTop="5dp"
            app:iconGravity="textEnd"
            app:cornerRadius="25dp"
            android:insetLeft="0dp"
            android:insetBottom="0dp"
            android:insetRight="0dp"
            android:insetTop="0dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            />
    </LinearLayout>
</RelativeLayout>