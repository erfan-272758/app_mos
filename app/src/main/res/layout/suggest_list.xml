<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="20dp"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="@color/cardColor"
        android:id="@+id/card_view"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        app:cardElevation="3dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:id="@+id/text_des_p"
                android:textSize="14sp"
                android:text="برای این برنامه چند سال است که بچه های هیئت زحمت می کشند و بعد از این همه مدت قرار پس فردا از این برنامه رونمایی بشه دوستانی که می توانند حتما تشریف بیارند."
                android:maxLines="4"
                android:textColor="#000"
                />
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/mosque1"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:id="@+id/image_o"
                android:layout_below="@id/text_des_p"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/image_o"
                android:textSize="10sp"
                android:text="مسجد گوهرشاد"
                android:textColor="#000"
                android:textStyle="bold"
                android:id="@+id/text_name_o"
                android:layout_below="@id/text_des_p"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp"
                android:layout_below="@id/image_o"
                android:textSize="13sp"
                android:id="@+id/text_des_o"
                android:maxLines="2"
                android:textColor="#000"
                android:text="به مناسبت عید غدیر برنامه ایی تدارک دیده ایم و قرار است از مولودی خوانان..."
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="امتیاز این فعالیت"
                android:id="@+id/text4"
                android:layout_below="@id/text_des_o"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                android:layout_marginLeft="4dp"
                />
            <androidx.appcompat.widget.AppCompatRatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:rating="3.5"
                android:layout_marginTop="1dp"
                android:layout_below="@id/text_des_o"
                android:id="@+id/rating"
                android:layout_toLeftOf="@id/text4"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>
