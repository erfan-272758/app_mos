<?xml version="1.0" encoding="utf-8"?>
<com.google.myapplication.ui.Scroll
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/post_out"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/post_out"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layoutDirection="ltr"
            android:id="@+id/linear_p"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="5dp"
            >

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/person"
                android:layout_margin ="5dp"
                android:id="@+id/image_p"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@id/image_p"
                android:textSize="10sp"
                android:text="محمد حسین فاتحی"
                android:textColor="#000"
                android:textStyle="bold"
                android:id="@+id/text_name_p"
                />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.myapplication.ui.Scroll>
